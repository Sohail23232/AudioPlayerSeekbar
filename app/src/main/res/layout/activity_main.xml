<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainParent"
    android:background="@drawable/drake2"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:id="@+id/musicBar"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/btnPreviousSong"
            android:layout_width="@dimen/_45sdp"
            android:padding="@dimen/_8sdp"
app:layout_constraintEnd_toStartOf="@id/btnPlay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_fast_rewind_24"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:id="@+id/btnPlay"
            app:layout_constraintEnd_toStartOf="@id/btnNextSong"
            android:padding="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_pause_24"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/btnNextSong"
            android:layout_width="@dimen/_45sdp"
            android:padding="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/baseline_fast_forward_24"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp">
            <ImageView
                android:id="@+id/imgSong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/hotline_bling_drake"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txtSongName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Hotline Bling"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@id/cardView"
            app:layout_constraintTop_toTopOf="@id/cardView"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            />
        <TextView
            android:id="@+id/txtSingerName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtSongName"
            app:layout_constraintStart_toEndOf="@id/cardView"
            android:text="Drake"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:textStyle="bold"
            android:textColor="#605D5D"
            android:textSize="@dimen/_10sdp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
<ImageView
    android:layout_width="@dimen/_26sdp"
    android:layout_height="@dimen/_26sdp"
    android:layout_margin="@dimen/_15sdp"
    app:tint="@color/white"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/baseline_arrow_back_ios_24"
    />
    <ImageView
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_margin="@dimen/_15sdp"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_menu_24"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
       android:background="@drawable/round_play_btn"
        app:layout_constraintTop_toTopOf="@id/llLayout"
        app:layout_constraintBottom_toTopOf="@id/llLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_30sdp"/>

    <LinearLayout
        android:id="@+id/llLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        app:layout_constraintBottom_toTopOf="@id/musicBar"
        android:background="@drawable/round_playlist"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="282dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Popular"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>